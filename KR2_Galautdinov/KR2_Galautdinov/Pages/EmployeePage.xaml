<Page x:Class="KR2_Galautdinov.Pages.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Galautdinov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
            <Button Content="Profile" x:Name="ProfileB" Click="ProfileB_Click"/>
            <Button Content="Tasks" x:Name="TasksB" Click="TasksB_Click"/>
            <Button Content="Help" x:Name="HelpB" Click="HelpB_Click"/>
            <Button Content="Exit" x:Name="ExitB" Click="ExitB_Click"/>
        </StackPanel>
        <Frame x:Name="EmployeeFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Page>
